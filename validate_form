<?php
echo (isset($msg)) ? $msg : false;
HtmlHelper::formOpen('post', _WEB_ROOT . '/home/post_user');
HtmlHelper::input('<div>', '</br>' . form_error('name', '<span style="color: red;">', '</span>') . '</div>', 'text', 'name', '', '', 'Họ tên', old('name'));
HtmlHelper::input('<div>', '</br>' . form_error('email', '<span style="color: red;">', '</span>') . '</div>', 'email', 'email', '', '', 'Email', old('email'));
HtmlHelper::input('<div>', '</br>' . form_error('age', '<span style="color: red;">', '</span>') . '</div>', 'num', 'age', '', '', 'Tuổi', old('age'));
HtmlHelper::input('<div>', '</br>' . form_error('password', '<span style="color: red;">', '</span>') . '</div>', 'password', 'password', '', '', 'Mật khẩu', old('password'));
HtmlHelper::input('<div>', '</br>' . form_error('cpassword', '<span style="color: red;">', '</span>') . '</div>', 'password', 'cpassword', '', '', 'Nhập lại mật khẩu', old('cpassword'));
